<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ib_carpool" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IBCarpool" >
        <activity
            android:name="felix.chen.ib_carpool.Controllers.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="felix.chen.ib_carpool.Controllers.VehicleProfileActivity"
            android:exported="false" />
        <activity
            android:name="felix.chen.ib_carpool.Controllers.AddVehicleActivity"
            android:exported="false" />
        <activity
            android:name="felix.chen.ib_carpool.Controllers.VehiclesInfoActivity"
            android:exported="false" />
        <activity
            android:name="felix.chen.ib_carpool.Controllers.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name="felix.chen.ib_carpool.Controllers.SignInActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>